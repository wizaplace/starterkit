<nav>
    <div class="container-fluid no-gutter visible-xs">
        <div class="row">
            <ul id="categories-menu-mobile" class="nav nav-justified">
                {% set cptr = 0 %}
                {%for category in categoryTree() %}
                    {% set hasChild = category.children|length %}
                    {% if(cptr < 11) %}
                    <li>
                        {% if not hasChild %}
                            <a href="{{ path('category', {'slug': category.category.slug}) }}">
                                {{ category.category.name }}
                            </a>
                        {%  else %}
                            <a class="light-title" data-parent="#categories-menu-mobile" data-toggle="collapse" href="#{{ category.category.slug }}-sub" aria-expanded="false">
                                {{ category.category.name }}
                                <span class="glyphicon glyphicon-download pull-right"> </span>
                            </a>
                        {% endif %}
                        {% for child in category.children %}
                            {% set hasChild = child.children|length %}
                            <div class="panel-collapse collapse" role="tabpanel" id="{{ category.category.slug }}-sub">
                                <h1 class="text-blue">{{ category.category.name }}</h1>
                                <h3>
                                    {% if not hasChild %}
                                        <a href="{{ path('category', {'slug': child.category.slug}) }}">{% endif %}
                                        {{ child.category.name }}
                                        {% if not hasChild %}</a>{% endif %}
                                </h3>
                                {% if child.children|length > 0 %}
                                    <ul>
                                        {% for subchild in child.children %}
                                            <li>
                                                <a href="{{ path('category', {'slug': subchild.category.slug}) }}" class="technical-link">
                                                    {{ subchild.category.name }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </li>
                    {% set cptr = cptr +1 %}
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</nav>
