<nav aria-label="pagination">
    <ul class="pagination" v-if="pagination.nbPages > 1">

        {# go to previous page #}
        <li :class="{disabled: pagination.page == 1}" class="page-item">
            <a href="#" @click.prevent="goToPage(pagination.page - 1)" class="page-link">
                <span> < </span>
            </a>
        </li>

        {# 3 pages previous to current page #}
        <li v-for="i in range(pagination.page -3, pagination.page)" v-if="i > 0" class="page-item">
            <a href="#" @click.prevent="goToPage(i)" v-text="i" class="page-link"></a>
        </li>

        {# current page #}
        <li class="active page-item">
            <a href="#" @click.prevent="goToPage(pagination.page)" v-text="pagination.page" class="page-link"></a>
        </li>

        {# 3 pages next to current page #}
        <li v-for="i in range(pagination.page + 1, pagination.page + 4)" v-if="i < pagination.nbPages + 1" class="page-item">
            <a href="#" @click.prevent="goToPage(i)" v-text="i" class="page-link"></a>
        </li>

        {# go to next page #}
        <li :class="{disabled: pagination.page == pagination.nbPages}" class="page-item">
            <a href="#" @click.prevent="goToPage(pagination.page + 1)" class="page-link">
                <span> > </span>
            </a>
        </li>
    </ul>
</nav>
