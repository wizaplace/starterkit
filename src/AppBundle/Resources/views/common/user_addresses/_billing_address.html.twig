{# civility #}
<div class="form-group">
    <p class="required">{{ 'civility'|trans }}</p>

    <label class="radio">
        <input type="radio" name="user[addresses][billing][title]" value="mr" {% if user.billingAddress.title == 'mr' %} checked {% endif %} required>
        <span class="input-label">{{ 'mr'|trans }}</span>
    </label>

    <label class="radio">
        <input type="radio" name="user[addresses][billing][title]" value="mrs" {% if user.billingAddress.title == 'mrs' %} checked {% endif %}>
        <span class="input-label">{{ 'mrs'|trans }}</span>
    </label>
</div>

