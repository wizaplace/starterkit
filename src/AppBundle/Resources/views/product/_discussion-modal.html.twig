{# 'contact vendor' modal #}
<div class="modal fade" tabindex="-1" role="dialog" id="discussion-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                <h5 class="modal-title">{{ 'discussion_title'|trans({'%product_name%': product.name}) }}</h5>
            </div>

            {# discussion form is proccessed in WizaplaceFrontBundle #}
            <form action="{{ path('profile_discussion_create') }}" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token('discussion_token') }}">
                    <input type="hidden" name="return_url" value="{{ app.request.uri }}">
                    <input type="hidden" name="product_id" value="{{ product.id }}">

                    {# required message content #}
                    <textarea name="discussion_message" title="" required></textarea>
                </div>

                <div class="modal-footer">
                    <button data-dismiss="modal">{{ 'product.page.contact_vendor.modal.button.cancel'|trans }}</button>
                    <button type="submit">{{ 'product.page.contact_vendor.modal.button.send'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
