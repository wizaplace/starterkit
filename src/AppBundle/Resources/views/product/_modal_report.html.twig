<div id="report-modal" class="modal fade" tabindex="-1" role="dialog">
    <form role="form" method="POST" @submit.prevent="report">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                    <h5 class="modal-title">{{ 'product.report_modal.title'|trans }}</h5>
                </div>

                <div class="modal-body">
                    {# name #}
                    <label for="report-name">{{ 'product.report_modal.name'|trans }}</label>
                    <input id="report-name" type="text" v-model="reportName" required>

                    {# email #}
                    <label for="report-name">{{ 'product.report_modal.email'|trans }}</label>
                    <input id="report-name" type="email" v-model="reportEmail" required>

                    {# report reason #}
                    <label for="report-message">{{ 'product.report_modal.message'|trans }}</label>
                    <textarea id="report-message" required v-model="reportMessage"></textarea>
                </div>

                <div class="modal-footer">
                    <button type="button" data-dismiss="modal">{{ 'product.report_modal.cancel'|trans }}</button>
                    <button type="submit">{{ 'product.report_modal.send'|trans }}</button>
                </div>
            </div>
        </div>
    </form>
</div>
