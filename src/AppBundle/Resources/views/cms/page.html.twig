{% extends '@App/layout.html.twig' %}

{% block title -%}
    {% if page.metaTitle is not empty %}{{ page.metaTitle }} - {% endif -%}
    {{ parent() }}
{%- endblock %}
{% block meta_description -%}
    {% if page.metaDescription is empty %}
        {{ parent() }}
    {% else %}
        <meta name="description" content="{{ page.metaDescription|escape('html_attr') }}" />
    {% endif %}
{%- endblock %}

{% block body %}
    <h1>{{ page.title }}</h1>
    <p>{{ page.content|raw }}</p>
{% endblock %}
