{
    "autoload": {
        "psr-4": { "": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "require": {
        "php": ">=7.1",
        "bmancone/guzzle-stopwatch-middleware": "0.0.2",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "friendsofsymfony/jsrouting-bundle": "^1.6",
        "google/recaptcha": "^1.1",
        "guzzlehttp/guzzle": "^6.2",
        "incenteev/composer-parameter-handler": "^2.0",
        "jms/i18n-routing-bundle": "^2.0.2",
        "kphoen/sitemap-bundle": "^2.0",
        "predis/predis": "^1.1",
        "roave/security-advisories": "@dev",
        "seld/jsonlint": "^1.7",
        "sensio/distribution-bundle": "^5.0.20",
        "sensio/framework-extra-bundle": "^5.1.6",
        "sentry/sentry": "^1.8.2",
        "symfony/monolog-bundle": "^3.2",
        "symfony/psr-http-message-bridge": "^1.0",
        "symfony/symfony": "^3.4.6",
        "wizaplace/front-bundle": "~0.4.5",
        "zendframework/zend-diactoros": "^1.5"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.4",
        "lookyman/phpstan-symfony": "~0.4.1",
        "php-vcr/php-vcr": "^1.3",
        "phpstan/phpstan": "^0.9.2",
        "sensio/generator-bundle": "^3.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/phpunit-bridge": "^3.0",
        "wizaplace/php-coding-standard": "^1.1.3"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-install-cmd": [
            "@symfony-scripts",
            "vendor/bin/cghooks update || true"
        ],
        "post-update-cmd": [
            "@symfony-scripts",
            "vendor/bin/cghooks update || true"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "hooks": {
            "post-checkout": "composer install || true",
            "post-merge": "composer install || true"
        }
    },
    "config" : {
        "sort-packages": true
    }
}
